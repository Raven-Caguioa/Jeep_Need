<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Capacity"
    android:background="@color/lightGreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="378dp"
        android:layout_height="670dp"
        android:background="@drawable/background_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <TextView
            android:layout_width="225dp"
            android:layout_height="80dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="Passenger Capacity"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.123" />

        <ProgressBar
            android:id="@+id/capacity_bar"
            android:layout_width="323dp"
            android:layout_height="294dp"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:progress="50" />

        <TextView
            android:id="@+id/tv_capacity_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/20"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="@+id/capacity_bar"
            app:layout_constraintEnd_toEndOf="@+id/capacity_bar"
            app:layout_constraintStart_toStartOf="@+id/capacity_bar"
            app:layout_constraintTop_toTopOf="@+id/capacity_bar" />

        <TextView
            android:id="@+id/bt_increase"
            android:layout_width="138dp"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button2"
            android:gravity="center"
            android:text="+1"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/capacity_bar"
            app:layout_constraintTop_toBottomOf="@+id/capacity_bar" />

        <TextView
            android:id="@+id/bt_decrease"
            android:layout_width="138dp"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="-1"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/capacity_bar"
            app:layout_constraintTop_toBottomOf="@+id/capacity_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>